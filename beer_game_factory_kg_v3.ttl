@prefix bg: <http://beergame.org/ontology#> .
@prefix bg_factory: <http://beergame.org/factory#> .
@prefix bg_distributor: <http://beergame.org/distributor#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

# ============================================================================
# BEER GAME FACTORY KNOWLEDGE GRAPH - V3 (Federated, No Duplication)
# ============================================================================
# V3 Changes:
# - NO orders from downstream (received via BG_Supply_Chain federation)
# - NO shipments from upstream (Factory is the end of supply chain)
# - Only entities CREATED by Factory (shipments to downstream)
# ============================================================================

# Actor Definition
bg_factory:Factory_Delta a bg:Actor ;
    rdfs:label "Factory Delta" ;
    bg:role "Factory" ;
    bg:shippingDelay "2"^^xsd:integer ;
    bg:targetInventoryCoverage "2.5"^^xsd:decimal ;
    bg:orderUpToLevel "10"^^xsd:integer ;
    bg:demandSmoothingAlpha "0.3"^^xsd:decimal ;
    bg:productionCapacity "20"^^xsd:integer .

# Week 1
bg:Week_1 a bg:Week ;
    bg:weekNumber "1"^^xsd:integer ;
    rdfs:label "Week 1" .

# Inventory Week 1
bg_factory:Inventory_Week1 a bg:Inventory ;
    bg:forWeek bg:Week_1 ;
    bg:belongsTo bg_factory:Factory_Delta ;
    bg:currentInventory "12"^^xsd:integer ;
    bg:backlog "0"^^xsd:integer ;
    bg:incomingShipment "0"^^xsd:integer ;
    bg:outgoingShipment "0"^^xsd:integer ;
    bg:holdingCost "0.50"^^xsd:decimal ;
    bg:backlogCost "1.00"^^xsd:decimal ;
    rdfs:label "Factory Inventory Week 1" .

# Metrics Week 1
bg_factory:Factory_Delta_Metrics_Week1 a bg:ActorMetrics ;
    bg:forWeek bg:Week_1 ;
    bg:belongsTo bg_factory:Factory_Delta ;
    bg:demandRate "4.0"^^xsd:decimal ;
    bg:inventoryCoverage "3.0"^^xsd:decimal ;
    bg:stockoutRisk "false"^^xsd:boolean ;
    bg:bullwhipRisk "false"^^xsd:boolean ;
    bg:suggestedOrderQuantity "0"^^xsd:integer ;
    bg:totalCost "12.0"^^xsd:decimal ;
    rdfs:label "Factory Metrics Week 1" .

# Shipment Week 1 - Created BY Factory, sent TO Distributor
# V3: Only in Factory repo
bg_factory:Shipment_Week1_ToDistributor a bg:Shipment ;
    bg:forWeek bg:Week_1 ;
    bg:belongsTo bg_factory:Factory_Delta ;
    bg:shippedFrom bg_factory:Factory_Delta ;
    bg:shippedTo bg_distributor:Distributor_Gamma ;
    bg:shippedQuantity "4"^^xsd:integer ;
    bg:arrivalWeek "3"^^xsd:integer ;
    rdfs:label "Shipment Week 1 from Factory to Distributor (arrives Week 3)" .

# V3: NO orders created by Factory (it's the end of supply chain)
# V3: NO Order_Week1_FromDistributor here!
# Factory will see incoming orders via BG_Supply_Chain federation
